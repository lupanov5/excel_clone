{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["eslint:recommended", "google"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": "off",
        "linebreak-style": [
            "error",
            "windows"
        ],
        "comma-dangle": "off",
        "arrow-parens": "off",
        "curly-spacing": "off",
        "indent": ["error", 4],
        "max-len": ["error", { "ignoreTemplateLiterals": true }],
        "operator-linebreak": "off",
        "require-jsdoc": ["error", {
            "require": {
                "FunctionDeclaration": false,
                "MethodDefinition": false,
                "ClassDeclaration": false,
                "ArrowFunctionExpression": false,
                "FunctionExpression": false
            }
        }]
    }
}
